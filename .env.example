# =====================================================
# CONFIGURACION GENERAL
# =====================================================
TZ=America/Mexico_City
DATA_PATH=./stack_data

# =====================================================
# RED DOCKER
# =====================================================
NETWORK_NAME=vpn-proxy
NETWORK_SUBNET=172.19.50.0/24
NETWORK_GATEWAY=172.19.50.200

# =====================================================
# RED - IPs ESTATICAS
# =====================================================
# Router (gateway para apps)
ROUTER_IP=172.19.50.1

# WireGuard Gateway (MASTER)
WIREGUARD_IP=172.19.50.253

# Fortinet Gateway (BACKUP)
FORTINET_IP=172.19.50.252

# Nginx Proxy Manager
NPM_IP=172.19.50.250

# =====================================================
# KEEPALIVED - ALTA DISPONIBILIDAD
# =====================================================
# Virtual Router ID (debe ser igual en ambos gateways)
KEEPALIVED_VRID=50

# VIP - IP Virtual flotante (la que usan las apps)
KEEPALIVED_VIP=172.19.50.254

# Password de autenticacion VRRP
KEEPALIVED_AUTH=vpnproxy

# IP para health check (verificar conectividad VPN)
HEALTH_CHECK_IP=8.8.8.8

# =====================================================
# WIREGUARD / GLUETUN
# =====================================================
VPN_ENDPOINT=your-wireguard-server.com
VPN_PORT=51820
WIREGUARD_PUBLIC_KEY=your-server-public-key
WIREGUARD_PRIVATE_KEY=your-client-private-key
WIREGUARD_PRESHARED_KEY=your-preshared-key
WIREGUARD_ADDRESSES=10.0.0.2/32

# =====================================================
# FORTINET / OPENCONNECT
# =====================================================
FORTICLIENT_HOST=vpn.empresa.com
FORTICLIENT_PORT=443
FORTICLIENT_USER=tu_usuario
FORTICLIENT_PASSWORD=tu_password
FORTICLIENT_REALM=
# Certificado en formato pin-sha256:xxx (se obtiene del error de conexion)
FORTICLIENT_TRUSTED_CERT=
FORTICLIENT_SET_DNS=0
FORTICLIENT_SET_ROUTES=1
# openconnect usa tun0 (no ppp0)
FORTICLIENT_INTERFACE=tun0

# =====================================================
# NGINX PROXY MANAGER
# =====================================================
ADMIN_EMAIL=admin@example.com
ADMIN_PWD=changeme123

# Rutas LAN que deben ir via VPN (separadas por coma)
# Ejemplo: 10.177.0.0/16,172.16.1.0/24
NPM_LAN_ROUTES=10.177.0.0/16,172.16.1.0/24
